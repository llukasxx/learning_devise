<header>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<ul class="nav nav-pills navheader">
				<li role="presentation"><%= link_to "Home", root_path %></li>
				<% if current_user.nil? %>
					<li role="presentation"><%= link_to 'Sign In', new_user_session_path %></li></li>
				<% else %>
				<li role="presentation" class="dropdown">
			    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
			      Actions <span class="caret"></span>
			    </a>
			    <ul class="dropdown-menu" role="menu">
			    	<li role="presentation"><%= link_to 'Profile', edit_user_registration_path(current_user) %>
			    	<li role="presentation"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
			    </ul>
			  </li>
				<% end %>
				<ul class="nav navbar-nav navbar-right">
					<li><%= "Logged in as: #{current_user.username}" if !current_user.nil?%><li>
				</ul>
			</ul>
		</div>
	</nav>
</header>
